{
  "openrpc": "1.2.4",
  "info": {
    "title": "Accessory",
    "description": "A module for assisting pairing and managing Firebolt compatible accessories.",
    "version": "0.0.0"
  },
  "components": {
    "schema": {
      "AccessoryList": {
        "title": "AccessoryList",
        "type": "object",
        "description": "Contains a list of Accessories paired to the device.",
        "properties": {
          "list": {
            "type": "array",
            "items": {
              "$ref": "#/components/schema/AccessoryInfo"
            }
          }
        }
      },
      "AccessoryInfo": {
        "title": "AccessoryInfo",
        "description": "Properties of a paired accessory.",
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of accessory",
            "enum": ["remote", "speaker"]
          },
          "make": {
            "type": "string",
            "description": "Name of the manufacturer of the accessory"
          },
          "model": {
            "type": "string",
            "description": "Model name of the accessory"
          },
          "connectivity": {
            "type": "string",
            "description": "Mechanism through which the accessory is connected to the device. Eg Bluetooth, ZRC, RF4Ce"
          }
        }
      }
    }
  },
  "methods": [
    {
      "name": "pair",
      "summary": "Pair an accessory with the device.",
      "params": [
        {
          "name": "type",
          "summary": "Defines the type of device being paired",
          "schema": {
            "type": "string"
          }
        },
        {
            "name": "connectivity",
            "summary": "Defines the mechanism by which accessory will connect to the device.",
            "schema": {
              "type": "string"
            }
        },
        {
          "name": "timeoutInSecs",
          "summary": "Defines the timeout in seconds. If the threshold for timeout is passed without a result it will throw an error.",
          "schema": {
            "type": "integer"
          }
        }
      ],
      "result": {
        "name": "pairedAccessory",
        "summary": "The state of last paired accessory",
        "schema": {
          "$ref": "#/components/schema/AccessoryInfo"
        }
      },
      "examples": [
        {
          "name": "Pair a Bluetooth Remote",
          "params": [
            {
              "name": "type",
              "value": "remote"
            },
            {
              "name": "connectivity",
              "value": "bluetooth"
            },
            {
              "name": "timeoutInSecs",
              "value": 180
            }
          ],
          "result": {
            "name": "Bluetooth Remote successful pairing example",
            "value": {
              "type": "remote",
              "make": "UEI",
              "model": "PR1",
              "connectivity": "bluetooth"
            }
          }
        },
        {
          "name": "Pair a Bluetooth Speaker",
          "params": [
            {
              "name": "type",
              "value": "speaker"
            },
            {
                "name": "connectivity",
                "value": "bluetooth"
            },
            {
              "name": "timeoutInSecs",
              "value": 180
            }
          ],
          "result": {
            "name": "Bluetooth Speaker successful pairing example",
            "value": {
              "type": "speaker",
              "make": "Sonos",
              "model": "V120",
              "connectivity": "bluetooth"
            }
          }
        },
        {
          "name": "Pair a RF Remote",
          "params": [
            {
              "name": "type",
              "value": "remote"
            },
            {
                "name": "connectivity",
                "value": "rf"
            },
            {
              "name": "timeoutInSecs",
              "value": 180
            }
          ],
          "result": {
            "name": "RF Remote successful pairing example",
            "value": {
              "type": "remote",
              "make": "UEI",
              "model": "15",
              "connectivity": "rf"
            }
          }
        }
      ]
    },
    {
      "name": "list",
      "summary": "Provides a list of Accesories paired to the device.",
      "params": [],
      "result": {
        "name": "list",
        "summary": "Contains a list of Accesories paired to the device.",
        "schema": {
          "$ref": "#/components/schema/AccessoryList"
        }
      },
      "examples": [
        {
          "name": "Accessory List Example",
          "params": [],
          "result": {
            "name": "Accessory List example",
            "value": {
              "list": [
                {
                  "type": "remote",
                  "make": "uei",
                  "model": "PR1",
                  "connectivity": "bluetooth"
                },
                {
                  "type": "speaker",
                  "make": "Sonos",
                  "model": "V120",
                  "connectivity": "bluetooth"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
