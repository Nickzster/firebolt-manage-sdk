{
    "openrpc": "1.2.4",
    "info": {
        "title": "DeveloperTools",
        "description": "A module for supporting off-device developer tools.",
        "version": "0.0.0"
    },
    "methods": [
        {
            "name": "scan",
            "summary": "Starts a long-running DNS-SD search for a list of developer tools that match the standard 'Firebolt Developer Tool' service type",
            "tags": [
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "const": null
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": null
                    }
                }
            ]
        },
        {
            "name": "stopScan",
            "summary": "Stops the long-running scan operation",
            "tags": [
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "result",
                "schema": {
                    "const": null
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [],
                    "result": {
                        "name": "Default Result",
                        "value": null
                    }
                }
            ]
        },
        {
            "name": "pair",
            "summary": "Configures Firebolt to accept incoming Firebolt JSON RPC messages from the developer tool identified by the given developer tool ID",
            "tags": [
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "params": [
                {
                    "name": "id",
                    "summary": "The ID of the DeveloperTool to which to connect",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "const": null
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "id",
                            "value": "ff6340fb-8576-494c-97c6-e60e9a4eeba9"
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": null
                    }
                }
            ]
        },
        {
            "name": "unpair",
            "summary": "Disconnect Firebolt as a web socket client from the web socket that corresponds to the given developer tool ID",
            "tags": [
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "params": [
                {
                    "name": "id",
                    "summary": "The ID of the DeveloperTool from which to disconnect",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                }
            ],
            "result": {
                "name": "result",
                "schema": {
                    "const": null
                }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "id",
                            "value": "ff6340fb-8576-494c-97c6-e60e9a4eeba9"
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": null
                    }
                }
            ]
        },
        {
            "name": "onToolAvailable",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "summary": "Listen to the toolAvailable event",
            "params": [
                {
                    "name": "listen",
                    "required": true,
                    "summary": "whether to listen, or stop listening",
                    "schema": {
                        "type": "boolean"
                    }
                }
            ],
            "result": {
                "name": "value",
                "schema": {
                    "oneOf": [
                        {
                            "$ref": "#/components/schemas/DeveloperTool"
                        },
                        {
                            "$ref": "https://meta.comcast.com/firebolt/types#/definitions/ListenResponse"
                        }
                    ]
               }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "listen",
                            "value": true
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": {
                            "id": "ff6340fb-8576-494c-97c6-e60e9a4eeba9",
                            "name": "sideloader"
                        }
                    }
                }
            ]
        },
        {
            "name": "onToolUnavailable",
            "tags": [
                {
                    "name": "event"
                },
                {
                    "name": "capabilities",
                    "x-manages": [
                        "xrn:firebolt:capability:settings:developer-mode"
                    ]
                }
            ],
            "summary": "Listen to the toolUnavailable event",
            "params": [
                {
                    "name": "listen",
                    "required": true,
                    "summary": "whether to listen, or stop listening",
                    "schema": {
                        "type": "boolean"
                    }
                }
            ],
            "result": {
                "name": "value",
                "schema": {
                    "oneOf": [
                        {
                            "$ref": "#/components/schemas/DeveloperTool"
                        },
                        {
                            "$ref": "https://meta.comcast.com/firebolt/types#/definitions/ListenResponse"
                        }
                    ]
               }
            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "listen",
                            "value": true
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": {
                            "id": "ff6340fb-8576-494c-97c6-e60e9a4eeba9",
                            "name": "sideloader"
                        }
                    }
                }
            ]
        }
    ],
    "components": {
        "schemas": {
            "DeveloperTool": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid",
                        "description": "The ID that uniquely identifies this instance of a developer tool"
                    },
                    "name": {
                        "type": "string",
                        "description": "Developer-visible 'friendly name' for the developer tool"
                    }
                }
            }
        }
    }
}
